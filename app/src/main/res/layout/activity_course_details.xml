<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".activities.CourseDetailsActivity">

    <TextView
        android:id="@+id/course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Course Description"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/course_title"
        app:layout_constraintTop_toBottomOf="@+id/course_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_student"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/purple_200"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/program"
        app:layout_goneMarginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_3" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="STUDENTS"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mid_activities"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/lavender"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_student"
        app:layout_goneMarginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mid_act_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_1" />

            <TextView
                android:id="@+id/tv_mid_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MIDTERM ACTIVITIES"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mid_quiz"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/lavender"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_mid_activities"
        app:layout_constraintTop_toBottomOf="@+id/cv_student"
        app:layout_goneMarginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mid_quiz_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_2" />

            <TextView
                android:id="@+id/tv_mid_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MIDTERM QUIZZES"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mid_exam"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/lavender"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_mid_quiz"
        app:layout_constraintTop_toBottomOf="@+id/cv_student"
        app:layout_goneMarginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mid_exam_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/btn_6" />

            <TextView
                android:id="@+id/tv_mid_exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MIDTERM EXAM"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mid_pit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/lavender"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_mid_exam"
        app:layout_constraintTop_toBottomOf="@+id/cv_student"
        app:layout_goneMarginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mid_pit_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/pit_img" />

            <TextView
                android:id="@+id/tv_mid_pit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="MIDTERM   PIT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:backgroundTint="@color/teal_700"
    android:id="@+id/cv_fin_activities"
    android:layout_height="80dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_width="80dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cv_mid_activities"
    app:layout_goneMarginTop="32dp">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fin_act_img"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/btn_1" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_fin_act"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="FINALS ACTIVITIES"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:backgroundTint="@color/teal_700"
    android:id="@+id/cv_fin_quiz"
    android:layout_height="80dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="24dp"
    android:layout_width="80dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintStart_toEndOf="@+id/cv_fin_activities"
    app:layout_constraintTop_toBottomOf="@+id/cv_mid_quiz"
    app:layout_goneMarginTop="32dp">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fin_quiz_img"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/btn_2" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_fin_quiz"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="FINALS QUIZZES"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:backgroundTint="@color/teal_700"
    android:id="@+id/cv_fin_exam"
    android:layout_height="80dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="24dp"
    android:layout_width="80dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintStart_toEndOf="@+id/cv_fin_quiz"
    app:layout_constraintTop_toBottomOf="@+id/cv_mid_exam"
    app:layout_goneMarginTop="32dp">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fin_exam_img"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/btn_6" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_fin_exam"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="FINALS EXAM"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:backgroundTint="@color/teal_700"
    android:id="@+id/cv_fin_pit"
    android:layout_height="80dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="24dp"
    android:layout_width="80dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintStart_toEndOf="@+id/cv_fin_exam"
    app:layout_constraintTop_toBottomOf="@+id/cv_mid_pit"
    app:layout_goneMarginTop="32dp">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fin_pit_img"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/pit_img" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_fin_pit"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="FINALS        PIT"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>